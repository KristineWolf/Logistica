<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_taskitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <TextView
        android:id="@+id/test_id_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"

        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/test_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/test_id_task"/>

    <TextView
        android:id="@+id/test_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/test_date"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_time"
        android:id="@+id/line1">

        <TextView
            android:id="@+id/test_source_x"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/test_source_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1">

        <TextView
            android:id="@+id/test_target_x"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/test_target_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


</RelativeLayout>